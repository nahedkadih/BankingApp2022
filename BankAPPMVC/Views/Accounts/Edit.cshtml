@model BankApp.Models.Account

@{
    ViewBag.Title = "Edit";
}

<h4>Edit Account</h4>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="max-width:700px;min-height:300px">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.accountnumber)

        <div class="form-group w-50">
            @Html.LabelFor(model => model.accountname, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.accountname, new { htmlAttributes = new { @class = "form-control" , required = true} })
                @Html.ValidationMessageFor(model => model.accountname, "", new { @class = "text-danger" })
            </div>
            <br />
            @Html.LabelFor(model => model.balance, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.balance, new { htmlAttributes = new { @class = "form-control" , required = true, min=00.05 } })
                @Html.ValidationMessageFor(model => model.balance, "", new { @class = "text-danger" })
              
            </div>
        </div>

        <br />

        <div class="form-group">
            <label>
                <input type="submit" value="Save" class="btn btn-primary" />
            </label>
        </div>
    </div>
}

<div style="margin-bottom:20px"> 
    @Html.ActionLink("Back to List", "Index")
</div>

 