@model BankPPP.Models.Account

@{
    ViewBag.Title = "Delete";
}

<h4>Delete Account</h4>
<hr />
<p class="error">@ViewBag.ErrorMessage</p>
<h6 class="error">Are you sure you want to delete this?</h6>
<div class="form-group w-50" style="max-width:700px;min-height:300px">
    <h7>Account</h7>
    <hr />
    <dl class="dl-horizontal">
        
        <dd>
            @Html.DisplayNameFor(model => model.accountnumber)
            @Html.DisplayFor(model => model.accountnumber)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.accountname)
            @Html.DisplayFor(model => model.accountname)
        </dd>

        <dd>
            @Html.DisplayNameFor(model => model.balance )
            @Html.DisplayFor(model => model.balance)
        </dd>

        <dd>
            @Html.DisplayNameFor(model => model.date_created )
            @Html.DisplayFor(model => model.date_created)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
         <label>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </label> 
    }
</div>
<div style="margin-bottom:20px">
    @Html.ActionLink("Back to List", "Index")
</div>
